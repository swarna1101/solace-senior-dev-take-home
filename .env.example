# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Task A: Enclave-Style Decryption Service
TASK_A_LAMBDA_FUNCTION_NAME=solace-decrypt-service
TASK_A_KMS_KEY_ALIAS=solace/decrypt
TASK_A_S3_BUCKET_NAME=solace-encrypted-blobs
TASK_A_API_GATEWAY_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod

# Task B: Client SDK Configuration
TASK_B_SDK_VERSION=1.0.0
TASK_B_NPM_PACKAGE_NAME=@solace/client-sdk

# Task C: Voice Assistant Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
AWS_POLLY_VOICE_ID=Joanna
AWS_POLLY_REGION=us-east-1

# Development Configuration
NODE_ENV=development
PORT=3000

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Optional: Local Development
LOCAL_DECRYPT_SERVICE_URL=http://localhost:3001
LOCAL_SDK_DEMO_URL=http://localhost:3002
